<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.rain.rainlog.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.rain.rainlog.ui.publish.PublishFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_publish" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.rain.rainlog.ui.page.PageFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_page" />

    <fragment
        android:id="@+id/login"
        android:name="com.rain.rainlog.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/captchaLogin"
        android:name="com.rain.rainlog.ui.captchalogin.CaptchaLoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_captcha_login" />

    <fragment
        android:id="@+id/register"
        android:name="com.rain.rainlog.ui.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/post"
        android:name="com.rain.rainlog.ui.content.post.PostFragment"
        android:label="Post"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/profile"
        android:name="com.rain.rainlog.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>